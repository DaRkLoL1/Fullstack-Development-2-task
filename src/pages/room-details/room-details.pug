extends ../../components/block-head/block-head.pug
include ../../components/header/header.pug
include ../../components/pie-chart/pie-chart.pug
include ../../components/set-of-qualities/set-of-qualities.pug
include ../../components/quality/quality.pug
include ../../components/comment/comment.pug
include ../../components/room-booking/room-booking.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/block-footer/block-footer.pug

block title
  title Room details
block body
  .room-details 
    .room-details__wrapper 
      +header({
        list: [
          {text: "О нас"},
          {text: "Услуги", style: "containArrow"},
          {text: "Вакансии"},
          {text: "Новости"},
          {text: "Соглашения", style: "containArrow"},
        ],
        buttons: [
          "войти",
          "зарегистрироваться"
        ]
      })
      .room-details__images
        .room-details__main-img
        .room-details__secondary-images
          .room-details__secondary-top-img
          .room-details__secondary-bottom-img
      .room-details__content
        .room-details__main-content
          .room-details__main-content-wrapper
            .room-details__details
              .room-details__info-and-feel
                .room-details__data-on-numbers 
                  h2(class="room-details__title") Сведения о номере
                  .room-details__set-of-qualities
                    +set-of-qualities
                  .room-details__quality
                    +quality({icon: "whatshot", header: "Уют", text: "Номер оснащён камином"})
                .room-details__pie-chart
                  +pie-chart
              .room-details__comments
                .room-details__comments-wrapper
                  h2(class="room-details__comments-title") Отзывы посетителей номера
                  p(class="room-details__comments-counter") 2 отзыва
                .room-details__top-comment
                  +comment(
                    {
                      image: "comment-img-1.png", 
                      name: "Мурад Сарафанов", 
                      time: "5 дней назад", 
                      like: 12, 
                      likeClicked: true,
                      text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
                    }
                  )
                .room-details__bottom-comment
                  +comment(
                    {
                      image: "comment-img-2.png", 
                      name: "Патрисия Стёклышкова", 
                      time: "Неделю назад", 
                      like: 2,
                      text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
                    }
                  )
            .room-details__booking
              +room-booking
          .room-details__rules-cancel
            .room-details__rules
              h2(class="room-details__rules-title") Правила
              +bullet-list(
                [
                  "Нельзя с питомцами",
                  "Без вечеринок и мероприятий",
                  "Время прибытия — после 13:00, а выезд до 12:00"
                ]
              )
            .room-details__cancel
              h2(class="room-details__cancel-title") Отмена
              p(class="room-details__cancel-text") Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
    +block-footer