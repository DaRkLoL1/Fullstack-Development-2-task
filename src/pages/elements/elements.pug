extends ../../components/block-head/block-head.pug
block title
  title Form Elements
block body
  include ../../components/text-field/text-field.pug
  include ../../components/masked-text-field/masked-text-field.pug
  include ../../components/field-button/field-button.pug
  include ../../components/switch/switch.pug
  include ../../components/expandable-checkbox-list/expandable-checkbox-list.pug
  include ../../components/rich-checkbox-buttons/rich-checkbox-buttons.pug
  include ../../components/like-button/like-button.pug
  include ../../components/rate-button/rate-button.pug
  include ../../components/comment/comment.pug 
  include ../../components/checkbox-buttons/checkbox-buttons.pug
  include ../../components/bullet-list/bullet-list.pug
  include ../../components/dropdown/dropdown.pug
  include ../../components/button-link/button-link.pug 
  include ../../components/set-of-qualities/set-of-qualities.pug
  include ../../components/radio-buttons/radio-buttons.pug
  include ../../components/pagination/pagination.pug
  include ../../components/range-slider/range-slider.pug
  include ../../components/calendar/calendar.pug

  .elements
    .elements__main-wrapper
      .elements__wrapper
        .elements__left-line
          .elements__text-field
            h3(class="elements__title") text field
            +text-field({text: "Email"})
          .elements__dropdown-visitor
            h3(class="elements__title") dropdown
            +dropdown({type: "withButtons", arrTitles: ["взрослые", "дети", "младенцы"]})
          .elements__masked-text-field
            h3(class="elements__title") masked text field
            +masked-text-field
          .elements__date-dropdown
            .elements__titles
              h3(class="elements__title") date dropdown
              h3(class="elements__title") date dropdown
            +calendar({dates: ["2019-08-19"], type: "dropdown"})
          .elements__filter-date-dropdown
            h3(class="elements__title") filter date dropdown
            +calendar({dates: ["2019-09-13","2019-09-16"], type: "filter"})
          .elements__subscription-text-field
            h3(class="elements__title") subscription text field
            +field-button({text: "Email", theme: "gradient", focus: true})
          .elements__dropdown-furniture
            h3(class="elements__title") dropdown
            +dropdown({arrTitles: ["спальни", "кровати", "ванные комнаты"], arrDefaultNumbers: [2, 2, 0]})
          .elements__expandable-checkbox-list
            +expandable-checkbox-list({
              text: "expandable checkbox list",
              arr: ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь", "Телевизор", "Шампунь"]
            })
        .elements__center-line
          .elements__checkbox-buttons
            +checkbox-buttons({
              text: "checkbox-buttons",
              arr: ["Можно курить", "Можно с питомцами", "Можно пригласить гостей (до 10 человек)"]
            })
          .elements__radio-buttons
            h3(class="elements__title") radio buttons
            +radio-buttons
          .elements__toggle
            h3(class="elements__title") toggle
            +switch({type: "toggle", text: "Получать спецпредложения"})
          .elements__like-button
            h3(class="elements__title") like-button
            +like-button(9)
          .elements__rate-button
            h3(class="elements__title") rate-button
            +rate-button(4)
          .elements__rich-checkbox-buttons
            +rich-checkbox-buttons({
              text: "rich checkbox buttons", 
              arr: [
                {
                  checkboxText: "Широкий коридор",
                  descriptor: "Ширина коридоров в номере не менее 91 см."
                },
                {
                  checkboxText: "Помощник для инвалидов",
                  descriptor: "На 1 этаже вас встретит специалист и проводит до номера."
                }
              ]
            })
        .elements__right-line
          .elements__range-slider
            +range-slider("range slider")
          .elements__buttons
            h3(class="elements__title elements__title-buttons") buttons
            .elements__button.elements__button_medium
              +button-link({size: "medium", text: "click me"})
            .elements__button.elements__button_medium
              +button-link({size: "medium", style: "ghost", text: "click me"})
            .elements__button.elements__button_small
              +button-link({text: "click me", page: "index.html"})
              +button-link({color: "grey", text: "click me"})
            .elements__button
              +button-link({size: "big", type: "submit", text: "перейти к оплате"})
          .elements__pagination
            h3(class="elements__title") pagination
            +pagination
          .elements__bullet-list
            h3(class="elements__title") bullet-list
            +bullet-list([
              "Нельзя с питомцами",
              "Без вечеринок и мероприятий",
              "Время прибытия — после 13:00, а выезд до 12:00"
            ])
      .elements__wrapper
        .elements__set-of-qualities
          +set-of-qualities
        .elements__comment
          +comment({image: "comment-img-1.png", name: "Мурад Сарафанов", time: "5 дней назад", like: 11,
            text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий." + 
              " И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})