doctype html
html
  head
    meta(charset="utf-8")
    title ui-kit
    meta(name="keywords" content="")
    meta(name="discription" content="")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
  body
    include components/text-field/text-field.pug
    include components/masked-text-field/masked-text-field.pug
    include components/field-button/field-button.pug
    include components/switch/switch.pug
    include components/expandable-checkbox-list/expandable-checkbox-list.pug
    include components/rich-checkbox-buttons/rich-checkbox-buttons.pug
    include components/like-button/like-button.pug
    include components/rate-button/rate-button.pug
    include components/submit/submit.pug
    include components/button/button.pug
    include components/btn/btn.pug
    include components/comment/comment.pug 

    .flex
      .w-320px
        p(class='item-title') Войти 123
        +text-field({text: 'Email'})
        +masked-text-field
        +field-button({text: 'ДД.ММ.ГГГГ'})
        +field-button({text: 'Сколько гостей', opacity: 'high'})
        +submit('перейти к оплате')
        +button({text: 'click me'})
        +button({text: 'click me', type: 'ghost'})
        +btn({text: 'click me'})
        +btn({text: 'click me', type: 'ghost'})
        include components/set-of-qualities/set-of-qualities.pug
        include components/date-dropdown/date-dropdown.pug 
        include components/datepicker-inline/datepicker-inline.pug

      .w-266px
        +field-button({text: 'Email', theme: 'gradient'})
        +switch({type: 'toggle', text: 'Получать спецпредложения'})
        include components/radio-buttons/radio-buttons.pug
        include components/checkbox-buttons/checkbox-buttons.pug
        +expandable-checkbox-list('expandable checkbox list')
        +rich-checkbox-buttons('rich checkbox buttons')
        +like-button(9)
        include components/bullet-list/bullet-list.pug
        +rate-button(1)
        +rate-button(4)
        +rate-button(2)
        include components/pagination/pagination.pug
        include components/range-slider/range-slider.pug
        +range-slider('range slider')
    +comment({image: 'image-1.png', name: 'Мурад Сарафанов', time: '5 дней назад', 
      text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.' + 
        ' И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})