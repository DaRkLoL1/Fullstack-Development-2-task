mixin buttons({size = '', style = '', type = '', text = ''} = {})
  - 
    let sizeButton = '';
    sizeButton = size ? ' buttons_' + size : '';

    let styleButton = '';

    if(sizeButton.length > 0) {
      styleButton = style ? sizeButton + '_ghost' : '';
    } else {
      styleButton = style ? ' buttons_ghost' : '';
    }

    if(styleButton === ' buttons_big_ghost') {
      styleButton = '';
    }

    let typeButton = type ? 'submit' : 'button';
  button(class='label-text buttons' + sizeButton + styleButton type=typeButton)=text