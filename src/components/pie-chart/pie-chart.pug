mixin pie-chart
  .pie-chart
    h2.pie-chart__title Впечатления от номера
    .pie-chart__content
      .pie-chart__circle
        p.pie-chart__vote
          span.pie-chart__number 260
          span.pie-chart__text голосов
      ul.pie-chart__list
        - 
          let arrColor = [
            ["Великолепно", ""],
            ["Хорошо", " pie-chart__item_list-item_green"],
            ["Удовлетворительно", " pie-chart__item_list-item_purple"],
            ["Разочарован", " pie-chart__item_list-item_black"],
          ]
        each val in arrColor
          li(class=`pie-chart__item${val[1]}`)= val[0]