
mixin button-link({size = "", style = "", type = "", text = "", color = "", page = ""} = {})
  - 
    let sizeButton = size ? " button-link_size_" + size : "";

    let styleButton = style ? " button-link_style_ghost" : "";

    let colorButton = color ? " button-link_color_grey" : "";

    let typeButton = type ? "submit" : "button";
  if page
    a(href=`./${page}.html` class=`button-link${sizeButton}${styleButton}${colorButton}`)=text
  else
    button(class=`button-link${sizeButton}${styleButton}${colorButton}` type=typeButton)=text