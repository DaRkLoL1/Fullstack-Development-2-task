include ../switch/switch.pug

mixin expandable-checkbox-list(text) 
  .expandable-checkbox-list
    div(class='expandable-checkbox-list__dropdown js-expandable-checkbox-list__dropdown')
      h3(class='expandable-checkbox-list__title')=text
      i(class='material-icons expandable-checkbox-list__icon') keyboard_arrow_down
    - 
      let arr = ['Завтрак', 'Письменный стол', 'Стул для кормления', 
        'Кроватка', 'Телевизор', 'Шампунь', 'Телевизор', 'Шампунь']
    .expandable-checkbox-list__items
      each val in arr
        .expandable-checkbox-list__item
          +switch({type: 'checkbox', text: val})