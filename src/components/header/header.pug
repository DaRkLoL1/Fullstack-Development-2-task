include ../button-link/button-link.pug

mixin header({list = [], name = "", buttons = [], logged = false} = {})
  header.header
    .header__wrapper
      a(href="landing-page.html")
        img(src="../../images/logo.png" alt="logo")
      .header__content
        .header__nav
          ul.header__list
            each val in list
              li.header__item(class=`${val.style ? "header__item_contains_arrow" : ""}`)
                a.header__link(href="/mock-address/change-me" class=`${val.weight ? "header__link_weight_bold" : ""}${val.style ? " header__link_contains_arrow" : ""}`)= val.text
        if logged
          .header__logged
            .header__line
            p.header__name= name
        else 
          .header__links
            .header__login
              +button-link({size: "medium", style: "ghost", page: "sign-in", text: buttons[0]})
            .header__register
              +button-link({size: "medium", page: "registration", text: buttons[1]})