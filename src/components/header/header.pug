include ../buttons/buttons.pug

mixin header({list = [], name = '', buttons = [], logged = false} = {})
  header.header
    .header__wrapper
      img(src='../components/header/logo.png')
      .header__content
        .header__nav
          ul.header__list
            each val in list
              li(class='header__item' + ( val.style ? ' header__item_contains_arrow' : '') )
                a(href='/mock-address/change-me' class='text header__link' + ( val.weight ? ' header__link_weight_bold' : '' )  + ( val.style ? ' header__link_contains_arrow' : '') )= val.text
        if logged
          .header__logged
            .header__line
            p(class='header__name text')= name
        else 
          .header__buttons
            .header__login
              +buttons({size: 'medium', style: 'ghost', text: buttons[0]})
            .header__register
              +buttons({size: 'medium', text: buttons[1]})
