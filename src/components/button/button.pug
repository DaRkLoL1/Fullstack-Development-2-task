
mixin button({size = '', style = '', type = '', text = ''} = {})
  - 
    let sizeButton = '';
    sizeButton = size ? ' button_size_' + size : '';

    let styleButton = '';

    if(sizeButton.length > 0) {
      styleButton = style ? ' button_style_ghost' : '';
    } else {
      styleButton = style ? ' button_color_ghost' : '';
    }

    if(styleButton === ' buttons_big_ghost') {
      styleButton = '';
    }

    let typeButton = type ? 'submit' : 'button';
  button(class=`button${sizeButton}${styleButton}` type=typeButton)=text