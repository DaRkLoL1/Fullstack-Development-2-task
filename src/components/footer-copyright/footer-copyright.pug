include ../field-button/field-button.pug

mixin footer-copyright({text = "", lists = [], subscribe = [], copyright = "" } = {}) 
  footer(class="footer-copyright")
    .footer-copyright__top-wrapper
      .footer-copyright__footer
        .footer-copyright__description
          img(class="footer-copyright__logo" src="../../images/logo.png" alt="logo")
          p(class="footer-copyright__text")= text
        .footer-copyright__lists
          - 
            let titleList = ["navigation", "about", "support"];
          each value, index in lists
            ul(class=`footer-copyright__list footer-copyright__list_type_${titleList[index]}`)
              each val, i in value
                if i === 0
                  li
                    h3(class="footer-copyright__list-title")= val
                else
                  li(class="footer-copyright__list-item")
                    a(class="footer-copyright__list-link" href="/mock-address/change-me")= val
        .footer-copyright__subscribe
          h3(class="footer-copyright__subscribe-title")= subscribe[0]
          p(class="footer-copyright__subscribe-text")= subscribe[1]
          form.footer-copyright__subscribe-input
            +field-button({text: subscribe[2], theme: "gradient"})
    .footer-copyright__bottom-wrapper
      .footer-copyright__copyright
        p(class="footer-copyright__text")= copyright
        .footer-copyright__icons
          -
            let network = [
              {
                way: "https://twitter.com/",
                logo: "twitter",
              },
              {
                way: "https://www.facebook.com/",
                logo: "facebook-square",
              },
              {
                way: "https://www.instagram.com/",
                logo: "instagram",
              },
            ];
          each val in network
            a(href=val.way target="_blank")
              i(class=`footer-copyright__icon fab fa-${val.logo}`)



