mixin switch(options)
  -
    let className = 'switch text js-switch';
    let type = '';
    let name = '';
    if(options.type === 'checkbox') {
      className += options.weight === 'b' ? ' switch_checkbox_weight_b' : '';
      className += ' switch_checkbox';
      type = 'checkbox';
    }
    else if(options.type === 'radio') {
      className += ' switch_radio';
      type = 'radio';
      name = options.name;
    }
    else if(options.type === 'toggle') {
      className += ' switch_toggle';
      type = 'checkbox';
    }
  label(class=className)
    input(type=type name=name class='switch__input js-switch__input')
    =options.text